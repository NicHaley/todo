{{#if editing}}
	{{input type="edit" value=todo.title enter="submitTodo"}}
{{else}}
	{{input type="checkbox" checked=todo.isCompleted class="toggle"}}
	<label class="{{if todo.isCompleted 'completed'}}" {{action "editTodo" on="doubleClick"}}>{{todo.title}}</label>
	<button class="destroy" {{action "deleteTodo"}}></button>
{{/if}}