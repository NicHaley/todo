{{#if editing}}
	{{input type="edit" value=todo.title action="submitTodo"}}
{{else}}
	{{input type="checkbox" checked=todo.isComplete class="toggle"}}
	<label class="{{if todo.isComplete 'completed'}}" {{action "editTodo" on="doubleClick"}}>{{todo.title}}</label>
	<button class="destroy"></button>
{{/if}}